package game.interaction;

public class Warrior {

	private int hp;
	private int mp;
	private int atk;
	private int dep;
	private int exp;
	
	public Warrior() {
		this.hp = 20;
		this.mp = 10;
		this.atk = 4;
		this.dep = 1;
		this.exp = 0;
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getMp() {
		return mp;
	}

	public void setMp(int mp) {
		this.mp = mp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDep() {
		return dep;
	}

	public void setDep(int dep) {
		this.dep = dep;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}
}
