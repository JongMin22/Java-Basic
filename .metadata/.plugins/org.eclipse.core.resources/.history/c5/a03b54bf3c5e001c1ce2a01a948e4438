package interaction;

public class Buyer {
 
	private int money; //소지금
	
public Buyer() {
	money = 50000;
	
}
public void buyMango(int mango) {
	System.out.println("현재 망고의 개수는 : "+ getMango(););
	if(money < mango*5000) {System.out.println("소지금이 부족합니다.");}
	money = money - mango*5000;
    System.out.println("망고 "+ mango+"개 를 "+ money +"원에 구매했습니다.");
}

}
