package interaction;

public class Buyer {
 
	private int money; //소지금
	private int mango;
	
public Buyer() {
	money = 50000;
	mango = 0;
	
}
 public void buyMango(Seller seller, int mango) { 
	System.out.println("구매 가능한 망고의 개수는 : "+ mango+"개 입니다.");
	seller.sellMango(mango);
	if(money - mango*5000 <= 0 ) {money = 50000;System.out.println("돈이 모자랍니다.");} 
	else{this.mango = this.mango + mango;}
    System.out.println("망고 "+ this.mango+"개 를 "+ money +"원에 구매했습니다.");
}
public void showBuyer() {
	System.out.println("=============구매자 정보==============");
	System.out.println("보유 망고: "+ this.mango+"개, 소지금 : " + this.money);

}
}
