package practice;

import java.util.Scanner;

public class practice {
	public static double FToc(double a) {
		return(a*1.8+32);
	}
	public static void main(String[] args) {
	// 섭씨온도를 입력하면 화씨온도로 바꿔주는 메서드를 작성해보겠습니다.
		// 메서드 이름은 FToC이고, double을 리턴합니다.
		// 리턴받은 결과값은 main메서드에 System.out.println()으로 출력.
		// 화씨 = (섭씨 x 1.8) + 32
		// 오늘의 섭씨 = 1'c
		Scanner scan = new Scanner(System.in);
		
		System.out.println("오늘의 섭씨 온도를 입력해주세요.");
		double c = scan.nextDouble();
		
		double b = FToc(c);
		System.out.println("오늘의 화씨온도 : " + b + "'C 입니다." );
		
		
		
		
		
	
  
	
	}
}
